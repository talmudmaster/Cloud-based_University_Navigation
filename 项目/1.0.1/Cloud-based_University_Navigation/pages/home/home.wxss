/* pages/home/home.wxss */

page {
    height: 100%;
    width: 100%;
}

.all {
    height: 100%;
    width: 100%;
}

.img {
    position: absolute;
    left: 0;
    bottom: 0;
    display: block;
    width: 100%;
    height: 100%;
    z-index: -9;
}

.list {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    height: 300px;
}

.list-container {
    height: 80px;
    width: 200px;
    background-color: #73a5d6;
    margin-top: 10px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: space-around;
}

.list-container-icon1 {
    width: 40px;
    height: 40px;
}

.list-container-font1 {
    font-size: 22px;
}

.list-container-font2 {
    text-align: right;
    font-size: 12px;
}

.list-container-icon2 {
    width: 30px;
    height: 30px;
}