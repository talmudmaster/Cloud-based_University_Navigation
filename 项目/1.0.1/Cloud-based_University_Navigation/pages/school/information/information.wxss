/* pages/school/school.wxss */
@import "../../../utils/utils.wxss";

page {
    height: 100%;
    width: 100%;
}

.card {
    margin: 10px;
}

.card-title {
    display: flex;
    align-items: center;
    flex-direction: row;
    border-bottom: 1px solid #b6b6b6;
    margin-bottom: 20px;
}

.card-title-img {
    height: 30px;
    width: 30px;
}

.card-title-font {
    color: #73a5d6;
    margin-left: 10px;
    font-size: 30px;
}

.card-container {
    margin-bottom: 30px;
}

.card-container-title {
    display: flex;
    align-items: center;
    flex-direction: row;
    margin-bottom: 10px;
}

.card-container-title-img {
    height: 25px;
    width: 25px;
}

.card-container-title-font {
    color: #73a5d6;
    margin-left: 10px;
    font-size: 22px;
}

.card-container-text {
    font-size: 18px;
}

.card-container-text-blue {
    color: #73a5d6;
}

.card-container-text-red {
    color: red;
}

.card-container-scorll {
    margin: 10px;
    border-radius: 10px;
    background-color: honeydew;
}

.card-container-scorll-view {
    background-color: #2dabf3;
    height: 45px;
    color: white;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.card-container-scorll-view-label {
    font-size: 16px;
    width: 120px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.choose {
    border-top: 10px solid #404481;
    color: black;
    background-color: honeydew;
}

.card-container-scorll-view-desc {
    height: 210px;
    width: auto;
    padding: 10px;
    font-size: 18px;
}

.card-container-scorll-view-desc-key {
    color: aqua;
}

.card-container-scorll-view-desc-call {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20px;
}

.card-container-scorll-view-desc-call-name {
    width: 160px;
}

.card-container-scorll-view-desc-call-button {
    width: 90px;
    height: 25px;
    background-color: #1AAD19;
    border-radius: 8px;
    font-size: 14px;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}