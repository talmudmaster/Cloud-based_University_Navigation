/* pages/rank/rank.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #73a5d6;
}

.title {
    text-align: center;
    margin-top: 10px;
    margin-bottom: 10px;
    color: white;
}

.title-1 {
    font-size: 22px;
}

.title-2 {
    font-size: 38px;
}

.list {
    margin: 10px 10px 0 10px;
    border-radius: 20px;
    background-color: white;
}

.list-title {
    height: 50px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 0 20px 0 20px;
    font-size: 20px;
    border-bottom: 2px solid #b95864;
}

.list-title-left {
    text-align: center;
    width: 50px;
}

.list-title-middle {
    text-align: center;
    width: 170px;
}

.list-title-right {
    text-align: center;
    width: 90px;
}

.list-result {
    height: 50px;
    margin: 5px 20px 10px 20px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    border-bottom: 1px solid gainsboro;
}

.list-result-left {
    text-align: center;
    width: 50px;
}

.list-result-middle {
    display: flex;
    flex-direction: column;
    width: 170px;
    text-align: center;
}

.list-result-right {
    text-align: center;
    width: 90px;
}

.bottom {
    height: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0px 15px 0 15px;
    color: white;
}

.bottom-text {
    height: 20px;
    font-size: 12px;
    font-weight: lighter;
}

.button {
    width: 300px;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.button-img {
    width: 30px;
    height: 30px;
    border-radius: 50%;
}
