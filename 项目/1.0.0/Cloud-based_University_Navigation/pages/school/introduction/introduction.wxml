<!--pages/introduction/introduction.wxml-->
<swiper class="swiper-item" indicator-dots="{{indicatorDots}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{activeColor}}" autoplay="{{autoplay}}" circular="{{circular}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
            <view>
                <image class="swiper-item-image" mode="widthFix" bindload="imgHeight" src="{{item}}"></image>
            </view>
        </swiper-item>
    </block>
</swiper>

<view class="daohang" bindtap="taptomap" style="margin-left: {{windowWidth-80}}px;">
    <text>地图\n导航</text>
</view>

<view class="title-font">
    <view class="title-font-1">
        云上高校
    </view>
    <view class="title-font-2">
        Cloud-based University
    </view>
</view>

<view class="text-font">
    <text user-select="true" decode="true">&ensp;&ensp;&ensp;&ensp;{{text}}</text>
</view>

<view class="video-font">
    学校风光
</view>

<view class="video">
    <video class="video-v" src="{{video}}" />
</view>

<view class="bottom-font">
    信息来源：学校官网
</view>