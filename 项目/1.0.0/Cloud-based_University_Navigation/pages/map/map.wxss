/* pages/map/map.wxss */
page {
    height: 100%;
    width: 100%;
    background-color: #f2f1ed;
}

.card {
    height: 100%;
}

.card-t {
    height: 90px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items:flex-end;
}

.card-top {
    height: 80px;
    background-color: #ffffff;
    border-radius: 10px;
    display: flex;
    justify-content: space-between;
}

.card-top-left {
    display: flex;
    flex-direction: column;
    border-radius: 10px 0 0 10px;
}

.card-top-left-begin {
    height: 50%;
    margin-left: 10px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #d8d8d8;
}

.card-top-left-begin-circle {
    width: 15px;
    height: 15px;
    border-radius: 50%;
    background-color: #8e1d21;
}

.card-top-left-begin-input {
    margin-left: 10px;
    letter-spacing: 1px;
}

.card-top-left-end {
    height: 50%;
    margin-left: 10px;
    display: flex;
    align-items: center;
}

.card-top-left-end-circle {
    width: 15px;
    height: 15px;
    border-radius: 50%;
    background-color: #404481;
}

.card-top-right {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0 10px 10px 0;
    margin-left: 10px;
    margin-right: 10px;
}

.card-top-right-button {
    background-color: #73a5d6;
    color: white;
    width: 80px;
    height: 40px;
    border-radius: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.relative {
    position: relative;
}

.img {   
    width: 55px;
    height: 55px;
}

.instruction {
    height: 55px;
    width: 55px;
    background-color: #73a5d6;
    border-radius: 50%;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}

.card-bottom {
    height: 240px;
    position: relative;
}

.card-bottom-button {
    width: 100%;
    height:35px;
    background-color: #ffffff99;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card-bottom-category {
    height: 100%;
    background-color: #f0f0f0;
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    
}

.card-bottom-category-label {
    width: 71px;
    height: 35px;
    margin-left: 2px;
    margin-right: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.choose {
    border-top: 10px solid #404481;
    background-color: white;
}

.choosesite {
    background-color: #e4e4e4;
}

.card-bottom-site {
    background-color: white;
    height: 160px;
    display: flex;
}

.card-bottom-site-card {
    font-size: 14px;
    width: 106px;
    display: flex;
    flex-direction:column;
}

.card-bottom-site-card-image{
    margin-top: 5px;
    display: flex;
    justify-content: center;
}

.card-bottom-site-card-img {
    height: 95px;
    width: 95px;
    border-radius: 10px;
}

.card-bottom-site-card-context {
    display: flex;
    width: 100%;
    height: 100%;
}

.card-bottom-site-card-context-icon {
    height: 20px;
    width: 20px;
}
